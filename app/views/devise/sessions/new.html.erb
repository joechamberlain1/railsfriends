<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
    <br/>
  </div>

  <div class="field form-group">
    
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
    <br/>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me, class: "form-check-input mb-3" %>
      <%= f.label :remember_me %>
      
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-dark" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
